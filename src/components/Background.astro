---
import Gargantua from "../assets/Gargantua.mp4";
import GargantuaPoster from "../assets/Gargantua-poster.jpg";


const {width = 'initial', height = '100svh'} = Astro.props;

---

<div class="Background">

    <video class="Background-video" src={Gargantua} autoplay muted loop
    
        style={{backgroundImage: `url(${GargantuaPoster.src})`}}

        transition:persist

    ></video>

    <div class="Background-content">

        <slot />

    </div>
</div>


<style>

    .Background {
        overflow-x: hidden;
        display: grid;
        grid-template-columns: 1fr;
    }
    .Background > * {
        grid-row-start: 1;
        grid-column-start: 1;
    }

    .Background-video {

        width: 100vw;
        height: 100vh;

        object-fit: cover;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
    .Background-content {

        display: flow-root;
        width: 100vw;
        height: 100vh;
        overflow-y: auto;
        overflow-x: hidden;
        scroll-behavior: smooth;

        backdrop-filter: blur(6px) saturate(220%);

		background: linear-gradient(45deg, #000000ac 40%, #00000039 100%);

        @media (max-width: 767.98px) {
            background: #000000ac;
        }
    }
</style>